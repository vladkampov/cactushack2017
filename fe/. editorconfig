# This allows Github web interface display code with tab length equal 4 spaces, not 8 like default;
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,html,scss}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
